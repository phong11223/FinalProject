@{
    ViewBag.Title = "Dashboard";
    ViewBag.SubTitle = "Statistics Overview";
}
@section scripts{
    <!-- Morris Charts JavaScript -->
    <script src="~/Content/js/jquery.js"></script>
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>*@
    <script src="~/Content/js/plugins/morris/raphael.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris-data.js"></script>
}


<div id="dashboard" class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.NewOrders</div>
                        <div>Đơn hàng mới</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-gift fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DispatchedOrders</div>
                        <div>Dispatched Orders</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem chi tết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-truck fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ShippedOrders</div>
                        <div>Shipped Orders</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-check fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DeliveredOrders</div>
                        <div>Hàng đặt đã được giao</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Xem chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>lịch sử bán hàng</h3>
            </div>
            <div class="panel-body">
                <div id="morris-area-chart"></div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="col-lg-4">
    <div class="panel panel-yellow">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Top 3 hàng bán chạy nhất</h3>
        </div>
        <div class="panel-body">
            <div id="morris-donut-chart"></div>
            <div class="text-right">
                <a href="#">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="panel panel-red">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Đặt hàng nhiều nhất trong ngày</h3>
        </div>
        <div class="panel-body">
            <div id="morris-line-chart"></div>
            <div class="text-right">
                <a href="#">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Bán hàng nhiều trên việt nam</h3>
        </div>
        <div class="panel-body">
            <div id="morris-bar-chart"></div>
            <div class="text-right">
                <a href="#">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Nhiệm vụ</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    <a href="#" class="list-group-item">
                        <span class="badge">just now</span>
                        <i class="fa fa-fw fa-calendar"></i> lịch được update
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">4 minutes ago</span>
                        <i class="fa fa-fw fa-comment"></i> Đăng bài lên
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">23 phút trước</span>
                        <i class="fa fa-fw fa-truck"></i> Đặt 392 shipped
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">46 phút trước</span>
                        <i class="fa fa-fw fa-money"></i> 653 hóa đơn đã được trả tiền
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">1 tiếng trước</span>
                        <i class="fa fa-fw fa-user"></i> Người dùng đã được thêm 
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">2 tiếng trước</span>
                        <i class="fa fa-fw fa-check"></i> Hoàn thành nhiệm vụ: "Giao cho khách hàng"
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">Hôm qua</span>
                        <i class="fa fa-fw fa-globe"></i> Hoàn thành nhiệm vụ "Giao nhanh"
                    </a>
                    <a href="#" class="list-group-item">
                        <span class="badge">2 ngày trước</span>
                        <i class="fa fa-fw fa-check"></i> Nhiệm vụ đã hoàn thành: "sửa lỗi trên trang bán hàng"
                    </a>
                </div>
                <div class="text-right">
                    <a href="#">Hiển thị tất cả các hoạt động <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Transactions Panel</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>OID</th>
                                <th>Ngày Đặt</th>
                                <th>Số tiền(PKR)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.latestOrders)
                            {

                                <tr>
                                    <td>@item.OrderID</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.TotalAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
