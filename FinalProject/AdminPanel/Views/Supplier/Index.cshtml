@model IEnumerable<AdminPanel.Models.Supplier>
@{
    ViewBag.Title = "Cung cấp";
}

<div>

    <a href="@Url.Action("Create", "Supplier")" class="btn btn-primary"><i class="fa fa-plus"></i>Tạo mới</a>
</div>
<br /><br />
<div class="table-responsive ">
    <table class="table table-condensed table-hover table-bordered table-striped table">
        <tr>
            <th>
                ID Hàng cung cấp
            </th>
            <th>
                Tên công ty
            </th>
            <th>
                Người liên lạc
            </th>
            <th>
                Thông tin liên hệ
            </th>
            <th>
                Số đt di động
            </th>
            <th>
                Email
            </th>
            <th>
                Thành phố
            </th>
            <th>
               Địa chỉ
            </th>

            <th></th>
        </tr>
        @if (Model != null)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Supplier", new { id = item.SupplierID })" aria-label="Edit">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Supplier", new { id = item.SupplierID })" aria-label="Details">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Supplier", new { id = item.SupplierID })" aria-label="Delete">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
