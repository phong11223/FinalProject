@model AdminPanel.Models.admin_Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Nhập Admin</title>
    @Styles.Render("~/Content/css")
    <style>

        .adminHeading {
            font-size: 36px;
            margin-left: 450px;
            color: white;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
   
    <div class="container">
        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
        {
            if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <strong>Dăng nhập thành công</strong>@ViewBag.Message
                </div>
            }
        }
        @using (Html.BeginForm("Login", "admin_Login", FormMethod.Post, new { @id = "loginForm" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <h1 class="adminHeading">Admin Panel</h1>
            <div class="row col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Đăng nhập vào tài khoản của bạn
                    </div><br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel-body">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @name = "username", @placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger " })
                            
                        </div>
                        <br />
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @name = "password", @type = "password", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                <div class="checkbox ">

                                    <label>
                                        <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                    </label>
                                </div>
                            </div>
                            <div class="alert-danger">@ViewData["error"]</div>
                            <div class="col-md-6 col-xs-6">
                                <div class="form-group">
                                    <div class="pull-right">
                                        <button type="reset" id="btn-reset" class="btn btn-warning">Reset</button>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/">
                                            <button type="button" id="btn-cancel" class="btn btn-danger">Cancel</button>
                                        </a>
                                    </div>
                                    <div class="pull-right">

                                        <button type="submit" id="btn-login" class="btn btn-success">Login</button>
                                    </div>
                                    <br /><br />
                                    <div class="pull-right">
                                        <a href="#" class="small">Quên Mật khẩu ?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          
        }
    </div>
    @Scripts.Render("~/Content/js")
</body>
</html>



