@model IEnumerable<FinalProject.Models.Order>
@{
    ViewBag.Title = "OrderPayment";
}

<table class="table table-hover">
    <tr>
        <th>
           Tên khách hàng
        </th>
        <th>
            Kiểu thanh toán
        </th>
        <th>
           Giảm giá
        </th>
        <th>
            Thuế
        </th>
        <th>
            Tổng số tiền
        </th>
        <th>
            Ngày đặt
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Customer.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.PaymentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taxes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>

            <td>
                @Html.ActionLink("View Details", "OrderDetails", new { id = item.OrderID })
            </td>
        </tr>
    }
</table>